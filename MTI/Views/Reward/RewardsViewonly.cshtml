@model IEnumerable<MTI.Helpers.rewardcastmodel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="well">المكافأت</h2>
@if (!Model.Any())
{
    <p>لم يتم أضافة مكافأة بعد</p>
}
else
{

    <div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StudentID)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Reward_reason)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WhoApplyIt)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.reward)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RewardDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.plusGrades)
                    </th>

                </tr>
            </thead>
            <tbody>

                @foreach (var data in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => data.StudentID)
                        </td>
                        <td>
                            @Html.DisplayFor(model => data.Reward_reason)
                        </td>
                        <td>
                            @Html.DisplayFor(model => data.WhoApplyIt)
                        </td>
                        <td>
                            @Html.DisplayFor(model => data.reward)
                        </td>
                        <td>
                            @Html.DisplayFor(model => data.RewardDate)
                        </td>
                        <td>
                            @Html.DisplayFor(model => data.plusGrades)
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
