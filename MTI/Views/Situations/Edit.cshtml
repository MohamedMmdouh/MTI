@model MTI.Models.Situations

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>تعديل البيانات</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="col-sm-12 right well">

        <div class="form-group ">
        @Html.LabelFor(model => model.StudentID)
        @Html.DropDownList("StudentID", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.StudentID, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SituationType)
        @Html.EditorFor(model => model.SituationType, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.SituationType, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Details)
        @Html.EditorFor(model => model.Details, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.procedure)
        @Html.EditorFor(model => model.procedure, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.procedure, "", new { @class = "text-danger" })
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.date)
        @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="تسجيل" class="btn btn-default" />
        </div>
    </div>
</div>
    </div>
}
